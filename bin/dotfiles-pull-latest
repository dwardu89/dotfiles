#!/usr/bin/env bash
set -euo pipefail

OLD_DIR=$PWD

DOTFILES_DIR=${1:-~/dotfiles}
cd $DOTFILES_DIR

dotfiles-master-check
echo $DOTFILES_DIR
if [ -n "$(git status --porcelain -- $DOTFILES_DIR)" ]; then
  echo "there are changes";
  exit 1
else
  git pull $DOTFILES_DIR
  echo "no changes";
fi

cd $OLD_DIR
